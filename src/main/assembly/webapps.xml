<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://www.maven.apache.org/xsd/assembly-2.0.0.xsd">
    
    <id>webapps</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/webapp</directory>
            <outputDirectory>/webapps/hr</outputDirectory>
            <includes>
                <include>**/*.html</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>

